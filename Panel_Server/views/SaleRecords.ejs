

<%- include('Header.ejs') %>

<div class="content">
  <div class="container-fluid">
    <div class="row">

      <div class="col-md-12">
        <div class="card">
          <div class="card-header card-header-<%=panelSetting.color_theme%> row">
            <div class="col-md-8">
              <h4 class="card-title" id="manageCardTitle">Histórico de vendas</h4>
              <p class="card-category">Todas as transações de compra de cargo feitas com sucesso são salvas aqui</p>
            </div>
            <div class="col-md-2">
              <div class="form-group bmd-form-group mt-0 pt-0">
                <select class="form-control" id="recordsPerPage" onchange="recordPerPageChanged()" required>
                  <option value="10" selected>10 itens/página</option>
                  <option value="15">15 itens/página</option>
                  <option value="20">20 itens/página</option>
                </select>
              </div>
            </div>
            <div class="col-md-2">
              <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end" id="paginationUL">
                </ul>
              </nav>
            </div>
          </div>
          <div class="card-body">
            <div class="table-responsive scroller" style="max-height:600px;overflow: auto;" id="style-4">
              <table class="table" id="salesrecords">
                <thead class=" text-primary">
                  <th>ID da compra</th>
                  <th>ID do comprador</th>
                  <th>STEAMID do comprador</th>
                  <th>Nome do comprador</th>
                  <th>Email do comprador</th>
                  <th>Desc. do produto</th>
                  <th>Quantidade</th>
                  <th>Status</th>
                  <th>Tipo de venda</th>
                  <th>Data</th>
                </thead>
                <tbody id="salesRecordBody">
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<%- include('Footer.ejs') %>

<script src="./js/notifications.js"></script>
<script src="./js/salesRecord.js"></script>